        <body>
            <div class="container">

                <h1 class="mb-2">Bem vindo ao blog</h1>
                <div class="row">
                    <% articles.forEach(article=> { %>
                        <div class="card col-md-12 mb-3">
                            <div class="card-header">
                                <h3>

                                    <%= article.title %>
                                </h3>
                            </div>
                            <div class="card-body">
                                <a href="/<%= article.slug %> " class="btn btn-secondary">Ler artigo</a>
                            </div>
                        </div>
                        <% }) %>
                </div>

            </div>
        </body>
